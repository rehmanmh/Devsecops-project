pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        SONAR_SCANNER_HOME = tool 'sonar-scanner'
        NEXUS_REGISTRY = "3.109.200.174:8082"
        IMAGE_NAME = "bankapp"
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rehmanmh/Devsecops-project.git'
            }
        }

        stage('Compile') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn test'
                }
            }
        }

        stage('Trivy File System Scan') {
            steps {
                dir('bankapp-devsecops') {
                    sh '''
                      trivy fs --exit-code 0 --severity LOW,MEDIUM .
                      trivy fs --exit-code 1 --severity HIGH,CRITICAL .
                    '''
                }
            }
        }

        stage('OWASP Dependency Check') {
            steps {
                dir('bankapp-devsecops') {
                    dependencyCheck additionalArguments: '''
                      --scan .
                      --format HTML
                      --out dependency-check-report
                    ''',
                    odcInstallation: 'dependency-check'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('bankapp-devsecops') {
                    withSonarQubeEnv('sonar-server') {
                        sh """
                          ${SONAR_SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=bankapp \
                          -Dsonar.projectName=bankapp \
                          -Dsonar.sources=. \
                          -Dsonar.java.binaries=target
                        """
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('bankapp-devsecops') {
                    sh """
                      docker build -t ${NEXUS_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Docker Push to Nexus') {
            steps {
                withDockerRegistry(
                    credentialsId: 'docker-cred-id',
                    url: "http://${NEXUS_REGISTRY}"
                ) {
                    dir('bankapp-devsecops') {
                        sh """
                          docker push ${NEXUS_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}
                        """
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ DevSecOps pipeline completed successfully"
        }
        failure {
            echo "❌ Pipeline failed — check logs"
        }
        always {
            sh 'docker system prune -f || true'
        }
    }
}
