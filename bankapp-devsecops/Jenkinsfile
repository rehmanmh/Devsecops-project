pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        IMAGE_NAME   = "3.109.200.174:8082/bankapp"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        REGISTRY_URL = "http://3.109.200.174:8082"
    }

    stages {

        /* =======================
           SOURCE
           ======================= */

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rehmanmh/Devsecops-project.git'
            }
        }

        /* =======================
           BUILD
           ======================= */

        stage('Compile') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn test'
                }
            }
        }

        /* =======================
           SECURITY – CODE LEVEL
           ======================= */

        stage('Trivy FS Scan') {
            steps {
                dir('bankapp-devsecops') {
                    sh '''
                      trivy fs --format table -o fs.html .
                      trivy fs --exit-code 1 --severity HIGH,CRITICAL .
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bankapp-devsecops/fs.html',
                                     fingerprint: true
                }
            }
        }

        stage('OWASP Dependency Check') {
            steps {
                dir('bankapp-devsecops') {
                    dependencyCheck additionalArguments: '''
                      --scan .
                      --format HTML
                      --out dependency-check-report
                    ''',
                    odcInstallation: 'dependency-check'
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bankapp-devsecops/dependency-check-report/**',
                                     fingerprint: true
                }
            }
        }

        /* =======================
           CODE QUALITY
           ======================= */

        stage('SonarQube Analysis') {
            steps {
                dir('bankapp-devsecops') {
                    withSonarQubeEnv('sonar-server') {
                        sh """
                          ${SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=bankapp \
                          -Dsonar.projectName=bankapp \
                          -Dsonar.sources=. \
                          -Dsonar.java.binaries=target \
                          -Dsonar.exclusions=dependency-check-report/**
                        """
                    }
                }
            }
        }

        /* =======================
           SONAR QUALITY GATE
           (OPTION 1 – NON-BLOCKING)
           ======================= */

        stage('Sonar Quality Gate (Non-blocking)') {
            steps {
                timeout(time: 30, unit: 'SECONDS') {
                    script {
                        try {
                            waitForQualityGate abortPipeline: false
                            echo "✅ Sonar Quality Gate checked (non-blocking)"
                        } catch (err) {
                            echo "⚠️ Sonar Quality Gate still PENDING after 30 seconds. Skipping for now."
                        }
                    }
                }
            }
        }

        /* =======================
           PACKAGE & CONTAINERIZE
           ======================= */

        stage('Build Application') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('bankapp-devsecops') {
                    withDockerRegistry(
                        credentialsId: 'docker-cred-id',
                        url: "${REGISTRY_URL}"
                    ) {
                        sh """
                          docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                        """
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh """
                  trivy image --format table -o image.html \
                  ${IMAGE_NAME}:${IMAGE_TAG}

                  trivy image --exit-code 1 --severity HIGH,CRITICAL \
                  ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'image.html',
                                     fingerprint: true
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry(
                    credentialsId: 'docker-cred-id',
                    url: "${REGISTRY_URL}"
                ) {
                    sh """
                      docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ DevSecOps pipeline completed successfully (Sonar gate non-blocking)"
        }
        failure {
            echo "❌ Pipeline failed — check logs"
        }
        always {
            sh 'docker system prune -f || true'
        }
    }
}
