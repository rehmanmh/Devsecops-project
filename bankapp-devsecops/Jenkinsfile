pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        IMAGE_NAME   = "3.109.200.174:8082/bankapp"
        IMAGE_TAG    = "${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rehmanmh/Devsecops-project.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        /* =======================
           SECURITY â€“ CODE LEVEL
           ======================= */

        stage('File System Scan (Trivy)') {
            steps {
                sh '''
                  trivy fs --exit-code 0 --severity LOW,MEDIUM .
                  trivy fs --exit-code 1 --severity HIGH,CRITICAL .
                '''
            }
        }

        stage('OWASP Dependency Check') {
            steps {
                dependencyCheck additionalArguments: '''
                  --scan .
                  --format HTML
                  --out dependency-check-report
                ''',
                odcInstallation: 'dependency-check'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh """
                      ${SCANNER_HOME}/bin/sonar-scanner \
                      -Dsonar.projectKey=BankApp \
                      -Dsonar.projectName=BankApp \
                      -Dsonar.sources=. \
                      -Dsonar.java.binaries=target
                    """
                }
            }
        }

        /* =======================
           BUILD ARTIFACT
           ======================= */

        stage('Build Application') {
            steps {
                sh 'mvn package'
            }
        }

        /* =======================
           CONTAINERIZATION
           ======================= */

        stage('Build & Tag Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred-id') {
                        sh """
                          docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                        """
                    }
                }
            }
        }

        stage('Scan Docker Image (Trivy)') {
            steps {
                sh """
                  trivy image --exit-code 0 --severity LOW,MEDIUM \
                  ${IMAGE_NAME}:${IMAGE_TAG}

                  trivy image --exit-code 1 --severity HIGH,CRITICAL \
                  ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    withDockerRegistry(
                        credentialsId: 'docker-cred-id',
                        url: "http://3.109.200.174:8082"
                    ) {
                        sh """
                          docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        """
                    }
                }
            }
        }
    }
}
