pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        IMAGE_NAME   = "3.109.200.174:8082/bankapp"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        REGISTRY_URL = "http://3.109.200.174:8082"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rehmanmh/Devsecops-project.git'
            }
        }

        stage('Compile') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn test'
                }
            }
        }

        /* =======================
           SECURITY â€“ CODE LEVEL
           ======================= */

        stage('Trivy FS Scan') {
            steps {
                dir('bankapp-devsecops') {
                    sh '''
                      trivy fs --format html -o trivy-fs.html .
                      trivy fs --exit-code 1 --severity HIGH,CRITICAL .
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bankapp-devsecops/trivy-fs.html',
                                     fingerprint: true
                }
            }
        }

        stage('OWASP Dependency Check') {
            steps {
                dir('bankapp-devsecops') {
                    dependencyCheck additionalArguments: '''
                      --scan .
                      --format HTML
                      --out dependency-check-report
                    ''',
                    odcInstallation: 'dependency-check'
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'bankapp-devsecops/dependency-check-report/**',
                                     fingerprint: true
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('bankapp-devsecops') {
                    withSonarQubeEnv('sonar-server') {
                        sh """
                          ${SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=bankapp \
                          -Dsonar.projectName=bankapp \
                          -Dsonar.sources=. \
                          -Dsonar.java.binaries=target \
                          -Dsonar.exclusions=dependency-check-report/**
                        """
                    }
                }
            }
        }

        stage('Sonar Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        /* =======================
           BUILD & CONTAINERIZE
           ======================= */

        stage('Build Application') {
            steps {
                dir('bankapp-devsecops') {
                    sh 'mvn package'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('bankapp-devsecops') {
                    withDockerRegistry(
                        credentialsId: 'docker-cred-id',
                        url: "${REGISTRY_URL}"
                    ) {
                        sh """
                          docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                        """
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh """
                  trivy image --format html -o trivy-image.html \
                  ${IMAGE_NAME}:${IMAGE_TAG}

                  trivy image --exit-code 1 --severity HIGH,CRITICAL \
                  ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
            post {
                always {
                    archiveArtifacts artifacts: 'trivy-image.html',
                                     fingerprint: true
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry(
                    credentialsId: 'doc
